@model ComprasCartonesLGP.Entities.Promocion

@{
    ViewBag.Title = "Promociones > Editar";
}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb background-turquesa3">
        <li class="breadcrumb-item textoBlanco" aria-current="page"><h4>@ViewBag.Title</h4></li>
    </ol>
</nav>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            @Html.LabelFor(model => model.Anio, "Año", htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm", @for = "colFormLabelSm" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Anio, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.Anio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Descripcion, "Detalle", htmlAttributes: new { @class = "col-sm-2 col-form-label col-form-label-sm", @for = "exampleFormControlTextarea1" })
            <div class="col-sm-6">
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row botones-formularios">
            <div class="margin-botones-formularios">
                <input type="submit" value="Guardar" class="btn botonPrincipal" />
            </div>
            <div class="margin-botones-formularios">
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn botonPrincipal" })
            </div>
        </div>
    </div>
}