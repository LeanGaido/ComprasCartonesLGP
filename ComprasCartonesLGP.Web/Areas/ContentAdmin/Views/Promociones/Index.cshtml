@model IEnumerable<ComprasCartonesLGP.Entities.Promocion>

@{
    ViewBag.Title = "Promociones";
}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb background-turquesa3">
        <li class="breadcrumb-item textoBlanco" aria-current="page"><h4>@ViewBag.Title</h4></li>
    </ol>
</nav>
<div class="container col-md-12 row">
    <div class="col-md-4">
        <p>
            <h4>@Html.ActionLink("Nueva Promoción", "Create", null, new { @class = "btn botonPrincipal" })</h4>
        </p>
    </div>
</div>
<div class="table-responsive" id="tableCtaCte">
    <table class="table table-hover" id="job-table">
        <thead>
            <tr class="text-center">
                <th scope="col">
                    <div align="center">Año</div>
                </th>
                <th scope="col">
                    <div align="center">Descripción</div>
                </th>
                <th></th>
                @*<th></th>*@
            </tr>
        </thead>
        <tbody class="text-center tableBody">
            @foreach (var item in Model)
            {
                <tr class="">
                    <td class="">
                        @Html.DisplayFor(modelItem => item.Anio)
                    </td>
                    <td class="">
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td width="5%"><a href="@Url.Action("Edit", new { id = item.ID })"><div align="center"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></div></a></td>
                    @*<td width="5%"><a href="@Url.Action("Delete", new { id = item.ID })"><div align="center"><i class="fa fa-times" aria-hidden="true"></i></div></a></td>*@

                </tr>
            }
        </tbody>
    </table>
    <br /><br />
</div>