@model ComprasCartonesLGP.Entities.Promocion

@{
    ViewBag.Title = "Promociones > Eliminar";
}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb background-turquesa3">
        <li class="breadcrumb-item textoBlanco" aria-current="page"><h4>@ViewBag.Title</h4></li>
    </ol>
</nav>
<div class="page-content">
    <div id="tab-general">
        <div id="sum_box" class="row mbl">
            <div class="col-lg-12 col-sm-12 col-md-12">
                <div align="center">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <h3>¿Desea realmente eliminar la promoción seleccionada?</h3>
                        @Html.HiddenFor(model => model.ID);
                        <p>
                            <button type="submit" class="btn botonPrincipal">SÍ</button>&nbsp;&nbsp;&nbsp;<a href="@Url.Action("Index")" class="btn botonPrincipal">NO</a>
                        </p>
                    }
                </div>
                &nbsp;<br>
            </div>
        </div>
    </div>
</div>