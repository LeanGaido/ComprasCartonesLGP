
@{
    ViewBag.Title = "Habilitar Compra";
}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb background-turquesa3">
        <li class="breadcrumb-item textoBlanco" aria-current="page"><h4>@ViewBag.Title</h4></li>
    </ol>
</nav>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container col-md-12 row">

        <div class="col-md-8 offset-md-2 text-center">
            <div class="form-group col-auto p-1 text-center">
                <h3>Habilitar Compra de solicitudes</h3>
                <div class="offset-md-1  col-md-10">
                    <input type="radio" checked name="Sexo" value="1"> Habilitar
                    <input type="radio" name="Sexo" value="2"> Deshabilitar
                </div>
            </div>
        </div>
        <div class="col-md-8 offset-md-2 text-center">
            <div class="form-group col-auto p-5 text-center">
                <h3>Fecha Habilitación</h3>
                <div class="offset-md-3 col-md-6">
                    <input type="text" placeholder="dd/MM/yyyy" class="form-control text-center" />
                </div>
            </div>
        </div>
    </div>
}
