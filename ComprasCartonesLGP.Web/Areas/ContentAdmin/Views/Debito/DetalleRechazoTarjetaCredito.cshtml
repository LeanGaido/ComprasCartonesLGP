@model ComprasCartonesLGP.Entities.ViewsModels.RechazoDebitoVm
@{
    ViewBag.Title = "Detalle Rechazo";
}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb background-turquesa3">
        <li class="breadcrumb-item textoBlanco" aria-current="page"><h4>@ViewBag.Title</h4></li>
    </ol>
</nav>
<div class="table-responsive" id="">
    <table class="table table-hover" id="job-table">
        <tbody class="text-center tableBody">
            <tr class="active">
                <th width="20%" scope="col">Nº Solicitud</th>
                <td>@Model.NroSolicitud</td>
            </tr>
            <tr class="active">
                <th width="20%" scope="col">Nombre Asociado</th>
                <td>@Model.NombreAsociado</td>
            </tr>
            <tr class="active">
                <th width="20%" scope="col">Mes Cuota</th>
                <td>@Model.MesCuota</td>
            </tr>
            <tr class="active">
                <th width="20%" scope="col">Fecha Rechazo</th>
                <td>@Model.FechaRechazo</td>
            </tr>
        </tbody>
    </table>
    <br /><br />
    <div class="text-center offset-md-3 col-md-6" style="display: @ViewBag.DisplayMensaje">
        <div class="alert alert-@ViewBag.Type dismissable" role="alert">
            <span>@ViewBag.Message</span>
        </div>
    </div>
    <div class="form-group row botones-formularios" style="display: @ViewBag.DisplayBoton">
        <div class="margin-botones-formularios">
            @Html.ActionLink("Generar otra solicitud de debito", "", new { currentFilter = ViewBag.CurrentFilter, page = ViewBag.page, Estado = ViewBag.Estado }, new { @class = "btn botonPrincipal" })
        </div>
    </div>
    <div class="form-group row botones-formularios">
        <div class="margin-botones-formularios">
            @Html.ActionLink("Volver", "RechazosTarjetaCredito", new { currentFilter = ViewBag.CurrentFilter, page = ViewBag.page, Estado = ViewBag.Estado }, new { @class = "btn botonPrincipal" })
        </div>
    </div>
</div>