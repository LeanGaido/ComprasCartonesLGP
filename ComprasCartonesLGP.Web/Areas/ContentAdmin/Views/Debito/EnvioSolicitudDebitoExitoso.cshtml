@model IEnumerable<ComprasCartonesLGP.Utilities.Alert>

@{
    ViewBag.Title = "Débitos Automaticos > Solicitudes de debito";
}

<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb background-turquesa3">
        <li class="breadcrumb-item textoBlanco" aria-current="page"><h4>@ViewBag.Title</h4></li>
    </ol>
</nav>
<div class="page-content">
    <div id="tab-general">
        <main>
            <section class="contact">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12" data-aos="fade-up" data-aos-delay="300">
                            <br />
                            <div class="text-center"><h4><strong>SOLICITUD DE DÉBITO ENVIADA EXITOSAMENTE</strong></h4></div>
                            <br /><br />
                            @if (Model.Count() != 0)
                            {
                                <div class="col-md-12">
                                    <div class="text-center"><h4><strong>Las siguientes cuotas no se han podido enviar: </strong></h4></div>
                                    <br />
                                    @foreach (var item in Model)
                                    {
                                        <div class="text-center col-md-offset-3 col-md-12">
                                            <div class="alert alert-@item.Type dismissable" role="alert">
                                                <span>@item.Message</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            <p class="text-center">
                                <a href="@Url.Action("Index", "Debito")" class="btn btn-primary">VOLVER</a>
                            </p>
                            <br />
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>
</div>