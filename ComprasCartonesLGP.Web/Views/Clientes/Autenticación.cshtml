
@{
    ViewBag.Title = "Autenticación";
}

<div class="container">
    <hr />
    <div class="row">
        <div class="heading main text-center" style="margin:auto;">
            <h3 class="uppercase lg-title">INGRESÁ EL CÓDIGO DE VERIFICACIÓN QUE SE<br /> HA ENVIADO A SU CELULAR</h3>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="global-container" style="margin:auto">
            <div class="card login-form">
                <div class="card-body">
                    <div class="card-text">
                        @using (Html.BeginForm())
                        {
                            if (!string.IsNullOrEmpty(ViewBag.MensajeError))
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    @ViewBag.MensajeError
                                </div>
                            }
                            if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                            {
                                <div class="alert alert-dark alert-dismissable">
                                    @ViewBag.Mensaje
                                </div>
                            }
                            <div class="form-group">
                                <label for="Dni">DNI<small>(Solo numeros, sin puntos o guiones)</small></label>
                                <input type="number" class="form-control form-control-sm" name="Dni" id="Dni" value="@ViewBag.Dni" readonly>
                            </div>
                            <div class="form-group">
                                <label for="CodVerificacion">Cod de Verificacion<small>(Solo numeros, sin puntos o guiones)</small></label>
                                <input type="number" class="form-control form-control-sm" name="CodVerificacion" id="CodVerificacion" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">SIGUIENTE</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>