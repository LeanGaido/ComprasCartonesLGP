
@{
    ViewBag.Title = "RegistroEmail";
}

<div class="global-container" style="margin:auto">
    <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center">BIENVENIDO</h3>
            <div class="card-text">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <div class="text-center">
                            <label for="Dni">DNI<small>(Solo numeros, sin puntos o guiones)</small></label>
                        </div>
                        <input type="number" class="form-control" name="Dni" id="Dni" value="@ViewBag.Dni" readonly>
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <label>CELULAR</label>
                        </div>
                        <div class="container row col-md-12">
                            <div class="col-md-6">
                                <div class="text-center">
                                    <label for="Area">Caracteristica<small>(sin el 0)</small></label>
                                </div>
                                <input type="number" class="form-control" name="Area" id="Area" placeholder="3564">
                            </div>
                            <div class="col-md-6">
                                <div class="text-center">
                                    <label for="Area">Número<small>(sin el 15)</small></label>
                                </div>
                                <input type="number" class="form-control" name="Numero" id="Numero" placeholder="698745">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">SIGUIENTE</button>
                }
            </div>
        </div>
    </div>
</div>
